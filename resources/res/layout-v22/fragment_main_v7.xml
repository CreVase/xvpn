<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/vpn_status_tv"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="VPN is OFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.security.xvpn.z35kb.widget.ConnectButton
            android:layout_gravity="center_horizontal"
            android:id="@+id/connect_btn"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="@dimen/main_connect_btn_size"
            android:layout_height="@dimen/main_connect_btn_size"
            android:layout_marginTop="@dimen/home_connect_btn_margin_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vpn_status_tv"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tap_connect_btn_tv"
            android:background="@drawable/bg_tap2connect_tip"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_connect_tips_margin"
            android:text="@string/TapConnectTips"
            app:layout_constraintBottom_toBottomOf="@+id/connect_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/select_panel"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/home_select_panel_margin_top"
            android:minWidth="250dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/connect_btn">
            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/btnSelectLocation"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivSelectedLocation"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_home_free"
                    android:labelFor="@+id/select_panel"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/main_select_location_txt_size"
                    android:textColor="#636f7b"
                    android:id="@+id/tvSelectedLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Location"
                    android:includeFontPadding="false"
                    android:drawablePadding="5dp"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginStart="10dp"
                    app:drawableEndCompat="@drawable/ic_home_arrow_right"/>
            </LinearLayout>
            <View
                android:id="@+id/divider"
                android:background="#d8d8d8"
                android:layout_width="127dp"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/btnSelectProtocol"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_home_protocol"
                    android:labelFor="@+id/select_panel"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/main_select_location_txt_size"
                    android:textColor="#636f7b"
                    android:id="@+id/tvProtocol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Protocol B"
                    android:includeFontPadding="false"
                    android:drawablePadding="5dp"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginStart="10dp"
                    app:drawableEndCompat="@drawable/ic_home_arrow_right"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        app:layout_constraintTop_toBottomOf="@+id/flag_top">
        <FrameLayout
            android:layout_gravity="bottom"
            android:id="@+id/fragment_native_ad_wrapper"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:gravity="center_vertical"
            android:layout_gravity="bottom"
            android:id="@+id/connectStatusTip"
            android:background="@drawable/bg_connect_status_tip"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/banner_bubble_bottom_margin"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_min="50dp"
            app:layout_constraintStart_toStartOf="parent">
            <ImageView
                android:id="@+id/ivBannerTip"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/black_lyw"
                android:id="@+id/tvBannerTip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="11dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivBannerTip"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_goneMarginStart="20dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"/>
    <com.security.xvpn.z35kb.widget.NavigationBarContentConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_bottom_panel"
            android:background="@drawable/img_main_bottom_panel"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:insetType="bottomMargin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/toPrivateBrowser"
                android:background="@drawable/main_bottom_panel_start"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_main_bottom_bar_browser"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/black_lyw"
                    android:gravity="center"
                    android:id="@+id/tvBrowser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="@string/PrivateBrowser"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/toAdvancedFeatures"
                android:background="@drawable/main_bottom_panel_end"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <com.security.xvpn.z35kb.widget.DotImageView
                    android:id="@+id/ivAdvancedFeatures"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_advanced_features"
                    app:dot_color="#ff0000"
                    app:dot_radius="3.3dp"
                    app:has_stroke="false"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/black_lyw"
                    android:gravity="center"
                    android:id="@+id/tvAdvancedFeatures"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="@string/AdvancedFeatures"/>
            </LinearLayout>
        </LinearLayout>
    </com.security.xvpn.z35kb.widget.NavigationBarContentConstraintLayout>
</LinearLayout>
