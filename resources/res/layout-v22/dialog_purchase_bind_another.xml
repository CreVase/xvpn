<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.security.xvpn.z35kb.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"/>
    <com.security.xvpn.z35kb.XTextViewNew
        android:textSize="18sp"
        android:textColor="@color/text_normal"
        android:id="@+id/bind_another_tip1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="45dp"
        android:layout_marginRight="35dp"
        android:text="It seems that there was subscription on this device before"
        android:lineSpacingExtra="5dp"
        android:layout_marginHorizontal="35dp"/>
    <TextView
        android:textSize="18sp"
        android:textColor="@color/text_normal"
        android:id="@+id/bind_another_tip2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="35dp"
        android:text="You can take it back by clicking &quot;Restore Purchase&quot; on the purchase page"
        android:lineSpacingExtra="5dp"
        android:layout_marginHorizontal="35dp"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <Button
        android:textSize="@dimen/dialog_purchase_remind_btn_txt_size"
        android:textColor="@color/black_lyw"
        android:layout_gravity="right"
        android:id="@+id/ok_btn"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:text="@string/RestorePurchase"
        android:textAllCaps="false"
        android:layout_marginHorizontal="35dp"/>
    <TextView
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/cancel_btn"
        android:background="@drawable/tv_focus_grey"
        android:padding="4dp"
        android:focusable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="62dp"
        android:text="@string/Cancel"/>
</LinearLayout>
