<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_gravity="right"
        android:id="@+id/btnClose"
        android:src="@drawable/icon_nav_cancel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TopBarIconStyle"/>
    <TextView
        android:textSize="18sp"
        android:textColor="#333333"
        android:layout_gravity="center"
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/ConnectFailed"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/NormalText"/>
    <ImageView
        android:id="@+id/vIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_update_app"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"/>
    <TextView
        android:textSize="18sp"
        android:id="@+id/tvDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:text="@string/UpdateAlertP1"
        android:lineHeight="24sp"
        app:layout_constraintTop_toBottomOf="@+id/vIcon"/>
    <TextView
        android:textSize="18sp"
        android:id="@+id/tvDescP2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:text="@string/UpdateAlertP2"
        app:layout_constraintTop_toBottomOf="@+id/tvDesc"/>
    <com.security.xvpn.z35kb.widget.XButton
        android:textSize="17sp"
        android:textColor="@color/white"
        android:id="@+id/vAction"
        android:background="@drawable/button_blue"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="45dp"
        android:layout_marginRight="20dp"
        android:foreground="@drawable/round_alpha40p_pressed"
        android:text="@string/UpdateNow"
        android:textAllCaps="false"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@+id/tvDescP2"/>
</androidx.constraintlayout.widget.ConstraintLayout>
