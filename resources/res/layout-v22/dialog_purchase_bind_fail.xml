<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.security.xvpn.z35kb.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"/>
    <com.security.xvpn.z35kb.XTextViewNew
        android:textSize="18sp"
        android:textColor="@color/text_normal"
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="45dp"
        android:layout_marginRight="35dp"
        android:text="@string/PremiumBindSuccess"
        android:layout_marginHorizontal="35dp"/>
    <com.security.xvpn.z35kb.XTextViewNew
        android:textSize="18sp"
        android:textColor="#2aa2ee"
        android:id="@+id/account_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="35dp"
        android:layout_marginHorizontal="35dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/vFailed"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginHorizontal="20dp"
        android:paddingHorizontal="20dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/ivFailed"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_purchase_failed"/>
        <com.security.xvpn.z35kb.XTextViewNew
            android:textSize="18sp"
            android:id="@+id/tvDesc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginRight="@dimen/dialog_purchase_remind_padding_right"
            android:text="@string/PremiumBindFailedTips"
            android:lineSpacingExtra="4dp"/>
        <com.security.xvpn.z35kb.XTextViewNew
            android:textSize="14sp"
            android:id="@+id/tvDesc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginRight="@dimen/dialog_purchase_remind_padding_right"
            android:layout_marginBottom="30dp"
            android:text="@string/PremiumBindFailedRetryTips"
            android:lineSpacingExtra="4dp"/>
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <com.security.xvpn.z35kb.widget.XButton
        android:textSize="@dimen/dialog_purchase_remind_btn_txt_size"
        android:textColor="@color/black_lyw"
        android:id="@+id/retry_btn"
        android:focusable="true"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_purchase_remind_btn_height"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="@string/Retry"
        android:textAllCaps="false"
        android:elevation="2dp"
        android:layout_marginHorizontal="40dp"/>
    <TextView
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/cancel_btn"
        android:background="@drawable/tv_focus_grey"
        android:padding="4dp"
        android:focusable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="62dp"
        android:text="@string/Cancel"/>
</LinearLayout>
