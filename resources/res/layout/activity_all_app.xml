<?xml version="1.0" encoding="utf-8"?>
<com.security.xvpn.z35kb.widget.NavigationBarContentConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.security.xvpn.z35kb.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <FrameLayout
        android:id="@+id/vEtContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">
        <com.security.xvpn.z35kb.widget.XEditText
            android:textSize="16dp"
            android:textColor="@color/text_normal"
            android:textColorHint="@color/search_hint_color"
            android:gravity="start|center_vertical"
            android:id="@+id/et"
            android:background="@drawable/bg_search"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="10dp"
            android:hint="@string/SearchApp"
            android:maxLength="100"
            android:drawableRight="@drawable/icon_search"
            android:drawablePadding="5dp"
            android:inputType="text"
            android:textCursorDrawable="@drawable/color_cursor"
            android:drawableEnd="@drawable/icon_search"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            app:isUseClearIcon="false"/>
        <ImageView
            android:layout_gravity="end|center_vertical"
            android:id="@+id/vClearInput"
            android:padding="6dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_browser_stop_load"
            android:layout_marginEnd="20dp"/>
    </FrameLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/vHideSystemApps"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="0.5dp"
        app:layout_constraintTop_toBottomOf="@+id/vEtContainer">
        <TextView
            android:textSize="17sp"
            android:id="@+id/tvHideSystemApps"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/HideSystemApps"
            android:layout_weight="1"/>
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchSystemApps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:thumb="@drawable/switch_thumb_style"
            app:buttonTint="@color/white"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_switch_text"
            app:layout_constraintRight_toRightOf="parent"
            app:showText="false"
            app:track="@drawable/switch_track_style"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:insetType="bottomPadding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vHideSystemApps"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/vNoResult"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vHideSystemApps">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:src="@drawable/img_split_tunneling_no_result"/>
        <TextView
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tvNoResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="@string/SearchAppNoResult"
            android:fontFamily="sans-serif-light"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/vNoApp"
        android:paddingLeft="33dp"
        android:paddingRight="33dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vHideSystemApps">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="47dp"
            android:src="@drawable/img_no_app_installed"/>
        <TextView
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tvNoAppTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/NoAppInstalledTitle"/>
        <TextView
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tvNoApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/NoAppInstalled"
            android:lineSpacingExtra="2dp"
            android:fontFamily="sans-serif-light"/>
    </LinearLayout>
</com.security.xvpn.z35kb.widget.NavigationBarContentConstraintLayout>
