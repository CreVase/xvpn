<?xml version="1.0" encoding="utf-8"?>
<com.security.xvpn.z35kb.browser.TabIndexView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vTab"
    android:background="@drawable/bg_browser_tab_index"
    android:padding="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4.5dp"
    android:animateLayoutChanges="false">
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/vTop"
        android:background="@drawable/bg_browser_tab_index_top"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/ivLogo"
            android:background="@drawable/bg_browser_tab_index_logo"
            android:padding="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:scaleType="fitCenter"/>
        <TextView
            android:textSize="12sp"
            android:ellipsize="end"
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:lines="1"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/vDelete"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_browser_tab_index_close"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/ivSnapshot"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vTop"/>
</com.security.xvpn.z35kb.browser.TabIndexView>
