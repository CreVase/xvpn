<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/tv_focus_grey"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layoutDirection="ltr">
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/itemColumn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="20dp"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/itemColumn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.533"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:id="@+id/itemColumn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.736"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_server_addr"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/itemColumn1"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.security.xvpn.z35kb.XTextViewNew
        android:textSize="15dp"
        android:textColor="#ff696969"
        android:ellipsize="end"
        android:id="@+id/tv_server_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:maxLines="2"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_server_addr"
        app:layout_constraintRight_toLeftOf="@+id/itemColumn2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginLeft="0dp"/>
    <com.security.xvpn.z35kb.XTextViewNew
        android:textSize="20sp"
        android:textColor="#ff4e4e4e"
        android:layout_gravity="center_vertical"
        android:id="@+id/tv_ping_speed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/itemColumn2"
        app:layout_constraintRight_toRightOf="@+id/itemColumn3"
        app:layout_constraintTop_toTopOf="parent"
        app:typeface="ShareTech"/>
    <ImageView
        android:id="@+id/ivPingLoading"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_refresh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/itemColumn2"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textColor="#df2323"
        android:layout_gravity="center_vertical"
        android:id="@+id/tv_ping_failed"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Failed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/itemColumn2"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="20sp"
        android:textColor="@color/black_lyw"
        android:layout_gravity="center_vertical"
        android:id="@+id/tv_download_speed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:autoSizeMaxTextSize="20sp"
        app:autoSizeStepGranularity="1px"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/itemColumn3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:typeface="ShareTech"/>
    <ImageView
        android:id="@+id/ivLossPkgLoading"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_refresh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/itemColumn3"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textColor="#df2323"
        android:layout_gravity="center_vertical"
        android:id="@+id/tv_status_failed"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Failed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/itemColumn3"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
