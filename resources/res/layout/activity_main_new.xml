<?xml version="1.0" encoding="utf-8"?>
<com.security.xvpn.z35kb.widget.NavigationBarContentConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    app:insetType="topPadding">
    <RelativeLayout
        android:id="@+id/main_topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_top_bar_height">
        <RelativeLayout
            android:id="@+id/button_more_wrap"
            android:background="@drawable/bg_status_bar_icon"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:contentDescription="Show navigation drawer">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivMenuMore"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/icon_nav_menu"
                android:scaleType="fitCenter"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                style="@style/TopBarIconStyleClean"/>
            <View
                android:id="@+id/left_drawer_msg"
                android:background="@drawable/bg_num_point_red"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <FrameLayout
            android:id="@+id/to_premium_page"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:foreground="@drawable/bg_focus_rectangle_full_round"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_alignWithParentIfMissing="true"
            android:contentDescription="Go Premium">
            <TextView
                android:textSize="10.24dp"
                android:textColor="#4f5766"
                android:gravity="center"
                android:id="@+id/tvToPremium"
                android:background="@drawable/ic_nav_to_premium"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="@string/GoPremium"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/toLiveChat"
            android:background="@drawable/bg_status_bar_icon"
            android:visibility="visible"
            android:layout_width="@dimen/top_bar_icon_size"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="Notification">
            <androidx.appcompat.widget.AppCompatImageView
                android:padding="6dp"
                android:focusable="false"
                android:src="@drawable/ic_livechat_avatar"
                android:scaleType="centerInside"
                style="@style/TopBarIconStyle"/>
            <View
                android:layout_gravity="top|right"
                android:id="@+id/hasNewMessage"
                android:background="@drawable/bg_num_point_red"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="11dp"/>
        </FrameLayout>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_topbar">
        <FrameLayout
            android:id="@+id/main_container"
            android:clipChildren="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/msg_notice_bar"
            android:background="#636f7b"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="36dp">
            <com.security.xvpn.z35kb.XTextViewNew
                android:textSize="13sp"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/notice_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:layout_toLeftOf="@+id/close_iv"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/close_iv"
                android:padding="9dp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/icon_nav_cancel"
                android:tint="@color/white"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </FrameLayout>
</com.security.xvpn.z35kb.widget.NavigationBarContentConstraintLayout>
