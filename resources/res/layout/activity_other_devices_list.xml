<?xml version="1.0" encoding="utf-8"?>
<com.security.xvpn.z35kb.widget.NavigationBarContentConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.security.xvpn.z35kb.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/openPasscodeLogin"
        android:background="@drawable/bg_pressed_rectangle"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_other_device_passcode"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="18dp">
            <TextView
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#4f5766"
                android:id="@+id/tvPasscodeLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/LoginByPasscode"/>
            <TextView
                android:textColor="#636f7b"
                android:id="@+id/tvPasscodeLoginDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/LoginByPasscodeDetails"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivArrow1"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/icon_arrow_right"/>
    </LinearLayout>
    <View
        android:id="@+id/divider_1"
        android:background="@color/white"
        android:layout_width="16dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/openPasscodeLogin"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/toPCsPage"
        android:background="@drawable/bg_pressed_rectangle"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_marginTop="0.5dp"
        app:layout_constraintTop_toBottomOf="@+id/divider_1">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_other_device_pc"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="18dp">
            <TextView
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#4f5766"
                android:id="@+id/tvForPc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ForAllDevices"/>
            <TextView
                android:textColor="#636f7b"
                android:id="@+id/tvForPcDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/ForAllDevicesDetails"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivArrow2"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/icon_arrow_right"/>
    </LinearLayout>
</com.security.xvpn.z35kb.widget.NavigationBarContentConstraintLayout>
