<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/originLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:id="@+id/mainContainer"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_guide"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginRight="40dp"
                        android:src="@drawable/img_guide_to_purchase_test_0"
                        app:layout_constraintBottom_toTopOf="@+id/tvTitle"
                        app:layout_constraintDimensionRatio="w,295:235"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <com.security.xvpn.z35kb.XTextViewNew
                        android:textSize="24dp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/tvTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:text="@string/StartGuidePremium"
                        android:lineSpacingExtra="4dp"
                        app:layout_constraintBottom_toTopOf="@+id/tv_desc"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>
                    <com.security.xvpn.z35kb.XTextViewNew
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/tv_desc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="40dp"
                        android:text="@string/StartGuidePremiumDetails"
                        android:minLines="2"
                        android:lineSpacingExtra="3dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvTitle"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <Space
                    android:id="@+id/tmpSpace2"
                    android:layout_width="0dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:textSize="16sp"
                    android:textColor="#1ca0f1"
                    android:id="@+id/btnUseWithAds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/UseWithAds"/>
                <Space
                    android:id="@+id/tmpSpace3"
                    android:layout_width="0dp"
                    android:layout_height="20dp"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/itemYearly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="16sp"
                        android:id="@+id/tvYearlyName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="@string/StartGuideAnnual"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:textSize="11sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:id="@+id/tvBestValue"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:focusable="false"
                        android:clickable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_marginTop="8dp"
                        android:minWidth="70dp"
                        android:text="@string/StartGuideBestValue"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginEnd="6dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:textSize="14dp"
                        android:id="@+id/tvYearlyPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="11dp"
                        android:fontFamily="sans-serif-thin"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/tvYearlyName"
                        app:layout_constraintTop_toBottomOf="@+id/tvYearlyName"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <Space
                    android:id="@+id/divider"
                    android:layout_width="0dp"
                    android:layout_height="16dp"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/itemMonthly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="16sp"
                        android:id="@+id/tvMonthlyName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="@string/StartGuideMonthly"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:textSize="14dp"
                        android:id="@+id/tvMonthlyPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="11dp"
                        android:fontFamily="sans-serif-thin"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/tvMonthlyName"
                        app:layout_constraintTop_toBottomOf="@+id/tvMonthlyName"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <Button
                    android:textSize="15sp"
                    android:id="@+id/btn_subscribe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/Continue"
                    android:textAllCaps="false"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"/>
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#1ca0f1"
                        android:layout_gravity="center"
                        android:id="@+id/tv_sign_in"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/SignIn"/>
                    <View
                        android:layout_gravity="center"
                        android:id="@+id/vw_dot"
                        android:background="@drawable/dot_sign_in_and_restore_purchase"
                        android:layout_width="5dp"
                        android:layout_height="5dp"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#1ca0f1"
                        android:layout_gravity="center"
                        android:id="@+id/tv_restore_purchase"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/RestorePurchase"/>
                </LinearLayout>
                <Space
                    android:id="@+id/tmpSpace4"
                    android:layout_width="0dp"
                    android:layout_height="40dp"/>
            </LinearLayout>
            <TextView
                android:textSize="11sp"
                android:textColor="#999999"
                android:textColorLink="@color/colorAccent"
                android:id="@+id/tvPurchaseRule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="40dp"
                android:lineSpacingExtra="2.5dp"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
