<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="14sp"
        android:textColor="@color/livechat_msg_menu_text"
        android:gravity="center_vertical"
        android:id="@+id/vUpgrade"
        android:background="@drawable/bg_livechat_msg_menu_top"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:scaleType="center"
        android:drawableLeft="@drawable/livechat_upgrade"
        android:drawablePadding="9dp"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/livechat_msg_menu_text"
        android:gravity="center_vertical"
        android:id="@+id/vDownGrade"
        android:background="@drawable/bg_livechat_msg_menu_rect"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="1.5dp"
        android:scaleType="center"
        android:drawableLeft="@drawable/livechat_downgrade"
        android:drawablePadding="9dp"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/livechat_msg_menu_text"
        android:gravity="center_vertical"
        android:id="@+id/vCopy"
        android:background="@drawable/bg_livechat_msg_menu_rect"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="1.5dp"
        android:scaleType="center"
        android:drawableLeft="@drawable/ic_livechat_menu_copy"
        android:drawablePadding="9dp"/>
    <TextView
        android:textSize="14sp"
        android:textColor="@color/livechat_msg_menu_text"
        android:gravity="center_vertical"
        android:id="@+id/tvDelete"
        android:background="@drawable/bg_livechat_msg_menu_rect"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="1.5dp"
        android:scaleType="center"
        android:drawableLeft="@drawable/ic_livechat_menu_del"
        android:drawablePadding="9dp"/>
</LinearLayout>
