<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/item_choose_bind_subscribe_0"
    android:background="@drawable/bg_choose_subscribe_item"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_choose_status"
        android:tag="binding_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_radio_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>
    <com.security.xvpn.z35kb.XTextViewNew
        android:textSize="16sp"
        android:textColor="@color/item_choose_bind_subscribe_title_color"
        android:id="@+id/tvSubscribeName"
        android:tag="binding_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/iv_choose_status"
        android:layout_alignTop="@+id/iv_choose_status"
        android:layout_alignBottom="@+id/iv_choose_status"/>
    <com.security.xvpn.z35kb.XTextViewNew
        android:textColor="#666666"
        android:id="@+id/tvSubscribeInfo"
        android:tag="binding_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/iv_choose_status"
        android:layout_alignLeft="@+id/iv_choose_status"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
